{
  "manifest_version": 2,

  "name": "Remind2Visit",
  "description": "Reminds you to visit your favorite sites regularly",
  "version": "1.0",

  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "tabs"
  ],

  "browser_action": {
    "default_title": "Remind2Visit",
    "default_icon": "images/main_icon.png",
    "default_popup": "html/popup.html"
  },

  "background": {
    "scripts": ["js/jquery-1.10.2.min.js", "js/background.js"]
  }
}
